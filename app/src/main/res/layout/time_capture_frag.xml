<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:bind="http://schemas.android.com/tools">
    <data>
        <variable
            name="vm"
            type="com.frodinm.ads_android_test.ui.capture.TimeCaptureViewModel" />
    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/purple_200">

        <include
            android:id="@+id/parent_time_capture_layout"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            layout="@layout/time_capture_layout"
            bind:vm="@{vm}"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"/>

        <fragment
            android:name="com.frodinm.ads_android_test.ui.capture.ChildTimeCaptureFragment"
            android:id="@+id/parent_time_capture_fragment"
            android:layout_width="0dp"
            android:layout_height="0dp"
            app:layout_constraintTop_toBottomOf="@id/parent_time_capture_layout"
            app:layout_constraintEnd_toEndOf="@id/parent_time_capture_layout"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            bind:layout="@layout/child_time_capture_frag"/>

    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>
